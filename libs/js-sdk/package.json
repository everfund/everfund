{
  "name": "@everfund/js-sdk",
  "version": "1.3.0",
  "description": "Plug and Play Donation System",
  "author": "Christopher Burns <christopher@everfund.co.uk>",
  "source": "src/index.ts",
  "exports": {
    "require": "./dist/index.cjs",
    "default": "./dist/index.modern.js"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.module.js",
  "unpkg": "./dist/index.umd.js",
  "scripts": {
    "build:prod": "yarn genversion && microbundle --define process.env.NODE_ENV=production --sourcemap false --output dist --tsconfig ./tsconfig.json",
    "build:dev": "yarn genversion && microbundle --define process.env.NODE_ENV=development --sourcemap true --output dist --tsconfig ./tsconfig.json",
    "watch": "yarn genversion && microbundle watch",
    "deploy": "npm run build && npm publish",
    "genversion": "genversion --es6 --semi src/version.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "serve ./dist",
    "format": "yarn prettier --write ."
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/body-scroll-lock": "^3.1.0",
    "@types/element-closest": "^3.0.0",
    "genversion": "^3.1.1",
    "microbundle": "^0.15.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "body-scroll-lock": "^4.0.0-beta.0",
    "core-js": "^3.22.3",
    "element-closest": "^3.0.2",
    "element-remove": "^1.0.4",
    "goober": "^2.1.9"
  }
}
