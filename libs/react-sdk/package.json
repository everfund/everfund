{
  "version": "1.3.1",
  "license": "MIT",
  "typings": "./dist/index.d.ts",
  "main": "./dist/react-sdk.js",
  "module": "./dist/react-sdk.esm.js",
  "umd:main": "./dist/react-sdk.umd.js",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build:prod": "microbundle --define process.env.NODE_ENV=production --sourcemap false --jsx React.createElement --output dist --tsconfig ./tsconfig.json",
    "build:dev": "microbundle --define process.env.NODE_ENV=development --sourcemap true --jsx React.createElement --output dist --tsconfig ./tsconfig.json",
    "dev": "microbundle --sourcemap true --jsx React.createElement watch",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@everfund/react-sdk",
  "author": "Christopher Burns",
  "size-limit": [
    {
      "path": "dist/react-sdk.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-sdk.esm.js",
      "limit": "10 KB"
    }
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/react": "17.0.47",
    "@types/react-dom": "^17.0.9",
    "husky": "^7.0.4",
    "microbundle": "^0.15.0",
    "react": "^18.1.0",
    "react-dom": "^17.0.2",
    "size-limit": "^7.0.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "goober": "^2.1.9"
  }
}
