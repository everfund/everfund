{
  "version": "1.0.2",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch --format cjs,esm,umd --name ef-sdk",
    "build": "tsdx build --format cjs,esm,umd --name ef-sdk",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build --format cjs,esm,umd --name ef-sdk",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "demo": "yarn parcel demo/index.html"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@everfund/sdk",
  "description": "Plug and Play Donation System",
  "author": "Christopher Burns <christopher@everfund.co.uk>",
  "module": "dist/sdk-new.esm.js",
  "size-limit": [
    {
      "path": "dist/sdk-new.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/sdk-new.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "@stitches/core": "^1.2.1",
    "core-js": "^3.18.1",
    "element-closest": "^3.0.2",
    "element-remove": "^1.0.4"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.5",
    "@types/element-closest": "^3.0.0",
    "husky": "^7.0.2",
    "parcel": "^2.0.0-rc.0",
    "size-limit": "^5.0.5",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  }
}
