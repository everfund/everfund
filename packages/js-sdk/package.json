{
  "name": "@everfund/js-sdk",
  "version": "1.3.3",
  "description": "Plug and Play Donation System",
  "author": "Christopher Burns <christopher@everfund.co.uk>",
  "source": "src/index.ts",
  "type": "module",
  "module": "dist/js-sdk.js",
  "main": "dist/js-sdk.cjs",
  "unpkg": "dist/js-sdk.umd.js",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "build:prod": "yarn genversion && microbundle --define process.env.NODE_ENV=production --sourcemap true --output dist --tsconfig ./tsconfig.json && yarn build:umd",
    "build:umd": "NODE_ENV=production rollup --config",
    "build:dev": "yarn genversion && microbundle --define process.env.NODE_ENV=development --sourcemap true --output dist --tsconfig ./tsconfig.json",
    "watch": "yarn genversion && microbundle watch",
    "deploy": "npm run build && npm publish",
    "genversion": "genversion --es6 --semi src/version.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "serve ./dist",
    "format": "yarn prettier --write ."
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.2.1",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/body-scroll-lock": "^3.1.0",
    "@types/element-closest": "^3.0.0",
    "genversion": "^3.1.1",
    "microbundle": "^0.15.0",
    "rollup": "^2.70.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-uglify": "^6.0.4",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "body-scroll-lock": "^4.0.0-beta.0",
    "core-js": "^3.22.3",
    "element-closest": "^3.0.2",
    "element-remove": "^1.0.4",
    "goober": "^2.1.9"
  }
}
